<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" maxHeight="800.0" maxWidth="1200.0" minHeight="600.0" minWidth="800.0" styleClass="settingsWindow" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cc.wangzijie.ui.view.SettingsWindowView">
    <children>
        <!-- 标题栏 & 菜单栏 -->
        <BorderPane maxHeight="40.0" minHeight="40.0" onMouseDragged="#onSettingsWindowMouseDragged" onMousePressed="#onSettingsWindowMousePressed" prefHeight="40.0" styleClass="settingsWindowTitleBar" VBox.vgrow="NEVER">
            <!-- 标题栏（左侧logo） -->
            <left>
                <HBox alignment="CENTER_LEFT" maxHeight="40.0" minHeight="40.0" prefHeight="40.0" spacing="10.0" styleClass="settingsWindowTitleBarLogoArea" BorderPane.alignment="CENTER_LEFT">
                    <children>
                        <Label minHeight="32.0" text="设置" textAlignment="CENTER" textFill="WHITE">
                            <font>
                                <Font name="Microsoft YaHei UI" size="18.0" />
                            </font>
                        </Label>
                    </children>
                    <BorderPane.margin>
                        <Insets left="10.0" right="10.0" />
                    </BorderPane.margin>
                </HBox>
            </left>
            <!-- 标题栏（右侧窗口按钮） -->
            <right>
                <HBox alignment="CENTER_RIGHT" maxHeight="40.0" minHeight="40.0" prefHeight="40.0" spacing="10.0" styleClass="settingsWindowTitleBarBtnArea" BorderPane.alignment="CENTER_RIGHT">
                    <children>
                        <Button maxHeight="32.0" maxWidth="32.0" minHeight="32.0" minWidth="32.0" onAction="#onCloseWindowButtonClick" prefHeight="32.0" prefWidth="32.0" styleClass="settingsWindowButton">
                            <graphic>
                                <ImageView fx:id="closeWindowButtonImage" fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true" />
                            </graphic>
                        </Button>
                    </children>
                    <BorderPane.margin>
                        <Insets left="10.0" right="10.0" />
                    </BorderPane.margin>
                    <padding>
                        <Insets bottom="2.0" top="2.0" />
                    </padding>
                </HBox>
            </right>
        </BorderPane>
        <!-- 主界面部分 -->
        <VBox VBox.vgrow="ALWAYS">
            <children>
                <HBox alignment="CENTER_LEFT" maxHeight="50.0" minHeight="50.0" spacing="10.0" styleClass="settingsRow">
                    <children>
                        <Label minHeight="32.0" text="1. 定时采集间隔（秒）" textFill="WHITE">
                            <font>
                                <Font name="Microsoft YaHei UI" size="18.0" />
                            </font>
                        </Label>
                        <TextField fx:id="intervalSecondsInput" prefHeight="32.0" promptText="请输入正整数" HBox.hgrow="ALWAYS" />
                        <Label minHeight="32.0" text="（取值：5~120，默认：10）" textFill="WHITE">
                            <font>
                                <Font name="Microsoft YaHei UI" size="18.0" />
                            </font>
                        </Label>
                    </children>
               <padding>
                  <Insets left="10.0" right="10.0" />
               </padding>
                </HBox>
                <HBox alignment="CENTER_LEFT" maxHeight="50.0" minHeight="50.0" spacing="10.0" styleClass="settingsRow">
                    <children>
                        <Label minHeight="32.0" text="2. 输出文件夹路径" textFill="WHITE">
                            <font>
                                <Font name="Microsoft YaHei UI" size="18.0" />
                            </font>
                        </Label>
                        <TextField fx:id="outputFolderPathInput" prefHeight="32.0" promptText="请输入文件夹的全路径" HBox.hgrow="ALWAYS" />
                    <CheckBox fx:id="outputFolderEnabledInput" mnemonicParsing="false" text="启用" />
                    </children>
                    <padding>
                        <Insets left="10.0" right="10.0" />
                    </padding>
                </HBox>
                <HBox alignment="CENTER_LEFT" maxHeight="50.0" minHeight="50.0" spacing="10.0" styleClass="settingsRow">
                    <children>
                        <Label minHeight="32.0" text="3. Hook回调URL" textFill="WHITE">
                            <font>
                                <Font name="Microsoft YaHei UI" size="18.0" />
                            </font>
                        </Label>
                        <TextField fx:id="callbackHookUrlInput" prefHeight="32.0" promptText="请输入完整的URL地址" HBox.hgrow="ALWAYS" />
                    <CheckBox fx:id="callbackHookEnabledInput" mnemonicParsing="false" text="启用" />
                    </children>
                    <padding>
                        <Insets left="10.0" right="10.0" />
                    </padding>
                </HBox>
            </children>
        </VBox>
        <HBox alignment="CENTER" maxHeight="50.0" minHeight="50.0" spacing="10.0" styleClass="settingsWindowBottom">
            <children>
                <Button maxHeight="48.0" maxWidth="48.0" minHeight="48.0" minWidth="48.0" onAction="#onApplySettings" prefHeight="48.0" prefWidth="48.0" styleClass="settingsWindowButton">
                    <graphic>
                        <ImageView fx:id="applySettingButtonImage" fitHeight="36.0" fitWidth="36.0" pickOnBounds="true" preserveRatio="true" />
                    </graphic>
                </Button>
            </children>
        </HBox>
    </children>
</VBox>
