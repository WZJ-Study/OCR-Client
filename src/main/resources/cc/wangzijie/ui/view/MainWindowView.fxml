<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox minHeight="800.0" minWidth="1200.0" spacing="5.0" styleClass="mainWindow"
      xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="cc.wangzijie.ui.view.MainWindowView">
    <children>
        <!-- 标题栏 -->
        <BorderPane maxHeight="50.0" minHeight="50.0" onMouseDragged="#onMainWindowMouseDragged"
                    onMousePressed="#onMainWindowMousePressed" prefHeight="50.0" styleClass="windowTitleBar"
                    VBox.vgrow="NEVER">
            <!-- 标题栏（左侧logo） -->
            <left>
                <AnchorPane maxHeight="50.0" minHeight="50.0" prefHeight="50.0" BorderPane.alignment="CENTER_LEFT">
                    <children>
                        <ImageView fx:id="mainWindowLogoImage" fitHeight="48.0" pickOnBounds="true" preserveRatio="true"
                                   AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                                   AnchorPane.topAnchor="0.0"/>
                    </children>
                </AnchorPane>
            </left>
            <!-- 标题栏（右侧窗口按钮） -->
            <right>
                <HBox alignment="CENTER_RIGHT" maxHeight="50.0" minHeight="50.0" nodeOrientation="LEFT_TO_RIGHT"
                      prefHeight="50.0" spacing="10.0" BorderPane.alignment="CENTER_RIGHT">
                    <children>
                        <Button maxHeight="45.0" maxWidth="45.0" minHeight="45.0" minWidth="45.0"
                                onAction="#onReloadButtonClick" prefHeight="45.0" prefWidth="45.0"
                                styleClass="windowButton">
                            <graphic>
                                <ImageView fx:id="reloadMainWindowButtonImage" fitHeight="36.0" fitWidth="36.0"
                                           pickOnBounds="true" preserveRatio="true"/>
                            </graphic>
                        </Button>
                        <Button maxHeight="45.0" maxWidth="45.0" minHeight="45.0" minWidth="45.0"
                                onAction="#onOpenSettingsWindowButtonClick" prefHeight="45.0" prefWidth="45.0"
                                styleClass="windowButton">
                            <graphic>
                                <ImageView fx:id="openSettingsWindowButtonImage" fitHeight="36.0" fitWidth="36.0"
                                           pickOnBounds="true" preserveRatio="true"/>
                            </graphic>
                        </Button>
                        <Button maxHeight="45.0" maxWidth="45.0" minHeight="45.0" minWidth="45.0"
                                onAction="#onMinimizeWindowButtonClick" prefHeight="45.0" prefWidth="45.0"
                                styleClass="windowButton">
                            <graphic>
                                <ImageView fx:id="minimizeWindowButtonImage" fitHeight="36.0" fitWidth="36.0"
                                           pickOnBounds="true" preserveRatio="true"/>
                            </graphic>
                        </Button>
                        <Button maxHeight="45.0" maxWidth="45.0" minHeight="45.0" minWidth="45.0"
                                onAction="#onMaximizeWindowButtonClick" prefHeight="45.0" prefWidth="45.0"
                                styleClass="windowButton">
                            <graphic>
                                <ImageView fx:id="maximizeWindowButtonImage" fitHeight="36.0" fitWidth="36.0"
                                           pickOnBounds="true" preserveRatio="true"/>
                            </graphic>
                        </Button>
                        <Button maxHeight="45.0" maxWidth="45.0" minHeight="45.0" minWidth="45.0"
                                onAction="#onCloseWindowButtonClick" prefHeight="45.0" prefWidth="45.0"
                                styleClass="windowButton">
                            <graphic>
                                <ImageView fx:id="closeWindowButtonImage" fitHeight="36.0" fitWidth="36.0"
                                           pickOnBounds="true" preserveRatio="true"/>
                            </graphic>
                        </Button>
                    </children>
                    <BorderPane.margin>
                        <Insets bottom="5.0" top="5.0"/>
                    </BorderPane.margin>
                </HBox>
            </right>
            <VBox.margin>
                <Insets left="10.0" right="10.0" top="10.0"/>
            </VBox.margin>
        </BorderPane>
        <!-- 标题栏 -->
        <HBox alignment="CENTER_LEFT" maxHeight="60.0" minHeight="60.0" nodeOrientation="LEFT_TO_RIGHT"
              prefHeight="60.0" spacing="10.0" styleClass="menuBar">
            <children>
                <Button maxHeight="50.0" maxWidth="50.0" minHeight="50.0" minWidth="50.0"
                        onAction="#onOpenFullMenuButtonClick" prefHeight="50.0" prefWidth="50.0"
                        styleClass="menuButton">
                    <graphic>
                        <ImageView fx:id="openFullMenuButtonImage" fitHeight="40.0" fitWidth="40.0" pickOnBounds="true"
                                   preserveRatio="true"/>
                    </graphic>
                </Button>
                <Button maxHeight="50.0" maxWidth="50.0" minHeight="50.0" minWidth="50.0"
                        onAction="#onHistoryDataMenuButtonClick" prefHeight="50.0" prefWidth="50.0"
                        styleClass="menuButton">
                    <graphic>
                        <ImageView fx:id="historyDataMenuButtonImage" fitHeight="40.0" fitWidth="40.0"
                                   pickOnBounds="true" preserveRatio="true"/>
                    </graphic>
                </Button>
                <Button maxHeight="50.0" maxWidth="50.0" minHeight="50.0" minWidth="50.0"
                        onAction="#onScreenshotMenuButtonClick" prefHeight="50.0" prefWidth="50.0"
                        styleClass="menuButton">
                    <graphic>
                        <ImageView fx:id="screenshotMenuButtonImage" fitHeight="40.0" fitWidth="40.0"
                                   pickOnBounds="true" preserveRatio="true"/>
                    </graphic>
                </Button>
                <Button maxHeight="50.0" maxWidth="50.0" minHeight="50.0" minWidth="50.0"
                        onAction="#onWithdrawMenuButtonClick" prefHeight="50.0" prefWidth="50.0"
                        styleClass="menuButton">
                    <graphic>
                        <ImageView fx:id="withdrawMenuButtonImage" fitHeight="40.0" fitWidth="40.0" pickOnBounds="true"
                                   preserveRatio="true"/>
                    </graphic>
                </Button>
                <Button maxHeight="50.0" maxWidth="50.0" minHeight="50.0" minWidth="50.0"
                        onAction="#onStartCollectMenuButtonClick" prefHeight="50.0" prefWidth="50.0"
                        styleClass="menuButton">
                    <graphic>
                        <ImageView fx:id="startCollectMenuButtonImage" fitHeight="40.0" fitWidth="40.0"
                                   pickOnBounds="true" preserveRatio="true"/>
                    </graphic>
                </Button>
                <Button maxHeight="50.0" maxWidth="50.0" minHeight="50.0" minWidth="50.0"
                        onAction="#onStopCollectMenuButtonClick" prefHeight="50.0" prefWidth="50.0"
                        styleClass="menuButton">
                    <graphic>
                        <ImageView fx:id="stopCollectMenuButtonImage" fitHeight="40.0" fitWidth="40.0"
                                   pickOnBounds="true" preserveRatio="true"/>
                    </graphic>
                </Button>
            </children>
            <padding>
                <Insets left="10.0" right="10.0"/>
            </padding>
        </HBox>
        <!-- 主界面部分 -->
        <BorderPane minHeight="670.0">
            <!-- 主界面部分-截图预览 -->
            <center>
                <AnchorPane minHeight="660.0" prefHeight="660.0" styleClass="screenshotArea"
                            BorderPane.alignment="CENTER">
                    <children>
                        <ScrollPane fitToHeight="true" fitToWidth="true" minHeight="460.0" pannable="true"
                                    prefHeight="460.0" styleClass="screenshotArea" AnchorPane.bottomAnchor="0.0"
                                    AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <content>
                                <VBox alignment="CENTER" styleClass="screenshotArea">
                                    <children>
                                        <ImageView fx:id="screenshotImage" styleClass="screenshotArea" pickOnBounds="true" preserveRatio="true">
                                            <cursor>
                                                <Cursor fx:constant="CROSSHAIR"/>
                                            </cursor>
                                        </ImageView>
                                        <Label fx:id="screenshotImageHint" minHeight="32.0" prefHeight="32.0"
                                               text="截屏提示语" textFill="WHITE" textOverrun="CENTER_ELLIPSIS">
                                            <font>
                                                <Font name="Microsoft YaHei UI" size="18.0"/>
                                            </font>
                                        </Label>
                                    </children>
                                </VBox>
                            </content>
                        </ScrollPane>
                    </children>
                </AnchorPane>
            </center>
            <!-- 主界面部分-数据列表 -->
            <right>
                <BorderPane minHeight="660.0" minWidth="450.0" prefHeight="660.0" prefWidth="450.0"
                            BorderPane.alignment="CENTER">
                    <!-- 主界面部分-数据列表-标题栏 -->
                    <top>
                        <BorderPane maxHeight="40.0" minHeight="40.0" minWidth="450.0" prefHeight="40.0"
                                    prefWidth="450.0" styleClass="dataListTitleBar" BorderPane.alignment="CENTER">
                            <left>
                                <HBox alignment="CENTER_LEFT" maxHeight="40.0" minHeight="40.0" prefHeight="40.0"
                                      spacing="10.0" BorderPane.alignment="CENTER_LEFT">
                                    <children>
                                        <Button maxHeight="32.0" maxWidth="32.0" minHeight="32.0" minWidth="32.0"
                                                onAction="#onDataListTitleBarMenuButtonClick" prefHeight="32.0"
                                                prefWidth="32.0" styleClass="dataListTitleBarButton" HBox.hgrow="NEVER">
                                            <graphic>
                                                <ImageView fx:id="dataListTitleBarMenuButtonImage" fitHeight="24.0"
                                                           fitWidth="24.0" pickOnBounds="true" preserveRatio="true"/>
                                            </graphic>
                                        </Button>
                                        <Label fx:id="dataListTitleBarMenuTitle" minHeight="32.0" prefHeight="32.0"
                                               text="数据信息" textFill="WHITE" textOverrun="CENTER_ELLIPSIS">
                                            <font>
                                                <Font name="Microsoft YaHei UI" size="18.0"/>
                                            </font>
                                        </Label>
                                    </children>
                                </HBox>
                            </left>
                            <right>
                                <HBox alignment="CENTER_RIGHT" maxHeight="40.0" minHeight="40.0" prefHeight="40.0"
                                      spacing="10.0" BorderPane.alignment="CENTER_RIGHT">
                                    <children>
                                        <Button maxHeight="32.0" maxWidth="32.0" minHeight="32.0" minWidth="32.0"
                                                onAction="#onDataListTitleBarSearchButtonClick" prefHeight="32.0"
                                                prefWidth="32.0" styleClass="dataListTitleBarButton">
                                            <graphic>
                                                <ImageView fx:id="dataListTitleBarSearchButtonImage" fitHeight="24.0"
                                                           fitWidth="24.0" pickOnBounds="true" preserveRatio="true"/>
                                            </graphic>
                                        </Button>
                                        <Button maxHeight="32.0" maxWidth="32.0" minHeight="32.0" minWidth="32.0"
                                                onAction="#onDataListTitleBarDeleteButtonClick" prefHeight="32.0"
                                                prefWidth="32.0" styleClass="dataListTitleBarButton">
                                            <graphic>
                                                <ImageView fx:id="dataListTitleBarDeleteButtonImage" fitHeight="24.0"
                                                           fitWidth="24.0" pickOnBounds="true" preserveRatio="true"/>
                                            </graphic>
                                        </Button>
                                    </children>
                                </HBox>
                            </right>
                        </BorderPane>
                    </top>
                    <center>
                        <Pane minHeight="620.0" minWidth="450.0" prefHeight="620.0" prefWidth="450.0"
                              BorderPane.alignment="CENTER">
                            <children>
                                <TableView editable="true" minHeight="620.0" minWidth="450.0"
                                           tableMenuButtonVisible="true">
                                    <columns>
                                        <TableColumn maxWidth="30.0" minWidth="30.0" prefWidth="30.0" resizable="false"
                                                     text=""/>
                                        <TableColumn maxWidth="512.0" minWidth="50.0" prefWidth="100.0"
                                                     resizable="false" text="字段名称"/>
                                        <TableColumn maxWidth="512.0" minWidth="50.0" prefWidth="100.0"
                                                     resizable="false" text="字段位置"/>
                                        <TableColumn maxWidth="512.0" minWidth="50.0" prefWidth="100.0"
                                                     resizable="false" text="字段类型"/>
                                        <TableColumn maxWidth="512.0" minWidth="50.0" prefWidth="100.0"
                                                     resizable="false" text="最新值"/>
                                    </columns>
                                </TableView>
                            </children>
                        </Pane>
                    </center>
                    <BorderPane.margin>
                        <Insets left="10.0"/>
                    </BorderPane.margin>
                </BorderPane>
            </right>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0"/>
            </padding>
        </BorderPane>
    </children>
</VBox>
